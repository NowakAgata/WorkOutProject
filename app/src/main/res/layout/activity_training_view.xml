<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackground"
    tools:context=".TrainingViewActivity">


    <ImageView
        android:id="@+id/trainingViewImgView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/poniedzialek"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/trainingViewNameTxtView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/trainingName"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trainingWorkoutsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="8dp">



    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="startTraining"
        android:layout_gravity="center"
        android:text="@string/start"
        android:background="@color/row_background"/>

</LinearLayout>