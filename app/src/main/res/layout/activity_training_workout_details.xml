<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackground"
    tools:context=".TrainingWorkoutDetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/seriesOrDuration"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_weight="2"
        android:textSize="20sp"/>
    <Spinner
        android:id="@+id/detailsSpinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/seriesOrDurationTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/series"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/seriesOrDurationEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/seriesHint"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/repetitiesOnSeriesEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:layout_weight="1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/add"
        android:onClick="addExerciseToTrainingOnclick"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@color/row_background"

        />

</LinearLayout>